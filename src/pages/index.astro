---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
const title = "self title";
const description = "self description";
const content = "Content";
import {
	Card,
	CardContent,
	CardDescription,
	CardFooter,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { buttonVariants } from "@/components/ui/button";
import Social from "@/components/Social.astro";
---

<Layout title="Welcome to Astro.">
	<Card
		className="mt-20 px-24 py-20 h-2/3 bg-dark-purple-bg border-2 border-light-purple"
	>
		<CardHeader>
			<CardTitle className="text-dark-purple-text">{title}</CardTitle>
			<CardDescription className="text-dark-purple-text">
				{description}
			</CardDescription>
		</CardHeader>
		<CardContent className="text-dark-purple-text">
			<p>{content}</p>
		</CardContent>
		<CardFooter className="text-dark-purple-text">
			<Social />
		</CardFooter>
	</Card>
</Layout>

