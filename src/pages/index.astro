---
import RootLayout from "../layouts/RootLayout.astro";
const title = "Sehnsucht";
const description = "POWER BY ASTRO";
const description2 = "hexWars";
const description3 = "NO PAIN, NO GAIN";
const time = "2020 - 2024";
---

<RootLayout title="Welcome to Astro.">
	<div class="h-full flex justify-center items-center">
		<div
			class="text-foreground text-7xl grid title-wrapper mb-[2.7%] w-screen h-full items-center justify-center"
		>
			<div class="title-top ml-1 italic bg-foreground z-10">
				{title}
			</div>
			<div
				class="title-bottom italic bg-foreground z-10"
				aria-hidden="true"
			>
				{title}
			</div>
		</div>
		<div
			class="absolute left-0 right-0 top-[49.5%] transform -translate-y-1/2 h-[0.2rem] bg-foreground z-10"
		>
		</div>
		<div
			class="absolute left-[42%] right-[42%] top-[58%] transform -translate-y-1/2 h-[0.1rem] bg-muted z-10"
		>
		</div>
		<div
			class="absolute left-[42%] right-[42%] top-[59%] text-xs flex font-bold justify-center underline decoration-dotted decoration-1 underline-offset-8"
		>
			{description}
		</div>
		<div
			class="absolute left-[42%] right-[42%] top-[63%] text-xs flex justify-center"
		>
			{description2}
		</div>
		<div
			class="absolute left-[42%] right-[42%] top-[67%] text-xs flex justify-center"
		>
			{time}
		</div>
		<div
			class="absolute left-[4%] right-[42%] top-[45%] text-xl font-extralight text-foreground"
		>
			{description3}
		</div>
		<!-- åœ† -->
		<div
			class="absolute left-[60%] right-[42%] top-[10%] text-xl rounded-full bg-ring w-[380px] h-[380px] transition hover:scale-110 z-0 duration-1000 ease-in-out blur-3xl"
		>
		</div>
	</div>
</RootLayout>

<style>
	.title-wrapper > div {
		grid-area: 1/1/-1/-1;
	}
	.title-top {
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		clip-path: polygon(0% 0%, 100% 0%, 100% 50%, 0% 50%);
	}
	.title-bottom {
		clip-path: polygon(0% 50%, 100% 50%, 100% 100%, 0% 100%);
		color: transparent;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
